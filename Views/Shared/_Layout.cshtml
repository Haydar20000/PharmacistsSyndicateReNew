<!DOCTYPE html>
@inject SignInManager<ApplicationUser> signInManager;
@inject UserManager<ApplicationUser> userManager;



<html id="htmlSize" dir="rtl">

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="~/img/logo.jpg" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Css/Style.css" rel="stylesheet" />

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker3.min.css" />
</head>

<body onload="load()">
    <div>
        <div id="theHeader">
            <div class="title-container">
                <div class="logo-section">
                    <a href="~/Home/index"><img class="logo" src="~/img/logo.png" alt="Logo" /></a>
                </div>
                <div class="title-section">
                    <a href="~/Home/index" class="text-ar">@DkStrings.CompanyName</a>
                    <a href="~/Home/index" class="text-ar">@DkStrings.CompanyNameEn</a>
                </div>
                <div class="empty-section">
                </div>
            </div>
        </div>
        <div id="theBody">
            <main>
                @RenderBody()
            </main>
        </div>
        <div id="theFooter">
            <footer>
                <a href="#" class="footer-text">
                    <p>Iraq Chemists Syndicate &copy; 2025</p>
                </a>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Js/ScreenHightControl.js" type="text/javascript"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>